@model List<KidKinder.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">


                <div class="card">
                    <div class="card-header">
                        <h5>Hizmetler Listesi</h5>
                        <span>Hizmetler ile ilgi işlem yapabileceğiniz alandır. </span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Hizmet Adı</th>
                                        <th>Açıklama</th>
                                        <th>Görsel</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td><img src="https://img.freepik.com/free-photo/standard-quality-control-collage-concept_23-2149595847.jpg?t=st=1709467964~exp=1709471564~hmac=00caf2e1c0f8576c1154459fccaf7c4f2c314b4dff1b63a90e538e80dec23b18&w=1060" width="50" height="50" /></td>
                                            <td><a href="/AdminService/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/AdminService/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                            <a href="/AdminService/CreateService/" class="btn btn-primary">Yeni Hizmet Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

