@model KidKinder.Entities.Family
@{
    ViewBag.Title = "UpdateFamily";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Veli Güncelleme</h5>
                                <span> Veli ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Veli Id</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x =>x.FamilyId  , new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Velinin Adı Soyadı:</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Öğrencinin Adı Soyadı:</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control" })
                                        </div>
                                    </div>

                                 
                                    <button class="btn btn-primary">Veli Bilgilerini Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

