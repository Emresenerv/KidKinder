@model List<KidKinder.Entities.Family>
@{
    ViewBag.Title = "FamilyList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">


                <div class="card">
                    <div class="card-header">
                        <h5>Velilerimiz</h5>
                        <span>Veliler ile ilgi işlem yapabileceğiniz alandır. </span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Veli Ad Soyad</th>
                                        <th>Öğrenci Ad Soyad</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.StudentName</td>
             
                                            <td><a href="/Family/DeleteFamily/@item.FamilyId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Family/UpdateFamily/@item.FamilyId" class="btn btn-success">Güncelle</a></td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                            <a href="/Family/CreateFamily/" class="btn btn-primary">Yeni Veli Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

